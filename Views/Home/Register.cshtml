@model User

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post" action="/kayit" autocomplete="off">
    <p><input type="text" name="Name"   placeholder="Ad Soyad" value="@Model.Name" /></p>
    <p><input type="email" name="Email"  placeholder="E-Posta Adresi" value="@Model.Email" /></p>
    <p><input type="password" name="Password"  placeholder="Şifre" value="@Model.Password" /></p>
    <p><input type="password" name="PasswordRepeat"  placeholder="Şifre Tekrar" value="@Model.PasswordRepeat" /></p>
    <button type="submit">Kayıt Ol</button>
</form>
